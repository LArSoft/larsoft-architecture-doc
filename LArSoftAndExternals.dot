digraph "LArSoft/externals" {
	graph [dpi=600, rankdir="LR" ];
	
	node [shape=box]
	"External library" [label="External\nlibrary"]
	
	subgraph cluster_LArSoft {
		label="LArSoft"
		penwidth=2.0
		color=red
		
		node [shape=ellipse]
		"LArSoft I/F" [label="Library/LArSoft\ninterface"]
		"LArSoft" [label="LArSoft\ntools"]
	}
	
	edge [fontcolor=mediumslateblue]
	"External library" -> "LArSoft I/F" [label="Exchange format,\nAPI", dir=both]
	"LArSoft I/F" -> "LArSoft" [label="data\nproducts", dir=both]
	
} // digraph
